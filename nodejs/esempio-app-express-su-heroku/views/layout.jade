doctype html
html(lang='it')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')

		block titolo
			title Sito node.js + express
		link(rel='stylesheet', href='/css/bootstrap.css')
		link(rel='stylesheet', href='/css/bootstrap-theme.css')
		link(rel='stylesheet', href='/css/site.css')
		<!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
		<!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
		<!--[if lt IE 9]>
		<script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
		<script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
		<![endif]-->
	body
		div.page-header
			p(class='text-info text-left')
				if (session.utente)
					| Benvenuto #{session.utente.username} hai il profilo
					| #{session.utente.profilo}
				else
					| Benvenuto utente ospite!	
			block testata
				h1.text-info Biblioteca Online!

		div.container-fluid
			div.row
				div.col-md-2
					block contenuti-laterali
						img(src='/imgs/books.png', class='img-thumbnail')
						include ./menu.jade
				div.col-md-10
					block contenuti-principali
					block validazione
						div.conmarginesuperiore
							if (errors)
								ul
									each error in errors
										li.text-danger #{error}

			div.row
				div.col-md-12
					block footer
						hr
						p(class='text-center text-info') &copy; Ivan Saracino
						
		script(src='/js/jquery.js')
		script(src='/js/bootstrap.js')