extends ./layout.jade

block titolo
	title Registrazione

block testata
	h1.text-info Registrazione

block contenuti-principali
	form(method='post', action='registrazione')
		div.form-group
			label(for='username') Nome Utente
			input(type='text', class='form-control' name='username', placeholder='Nome Utente')
		div.form-group
			label(for='password') Password
			input(type='password', class='form-control' name='password', placeholder='Password')
		div.form-group
			label(for='mail') Email
			input(type='text', class='form-control' name='email', placeholder='email')
		button(type='submit' class='btn btn-default') Registra